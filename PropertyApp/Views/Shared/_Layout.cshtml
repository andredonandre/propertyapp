<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/js/lightbox.min.js"></script>
    <link href="~/Content/Lightbox-Gallery.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PropertyApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#!/">Properties</a></li>
                    <li><a href="#!/new">Add new Property</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div  class="container body-content">
        <div ng-app="PropertyApp" class="row">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Renthia Property app</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/app/app.module.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/app/app.config.js"></script>
    <script src="~/Scripts/app/property-list/property-list.module.js"></script>
    <script src="~/Scripts/app/property-list/property-list.component.js"></script>
    <script src="~/Scripts/app/property-details/property-details.module.js"></script>
    <script src="~/Scripts/app/property-details/property-details.component.js"></script>
    <script src="~/Scripts/app/property-new/property-new.module.js"></script>
    <script src="~/Scripts/app/property-new/property-new.component.js"></script>
</body>
</html>
